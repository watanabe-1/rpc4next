{
  "name": "rpc4next-shared",
  "version": "0.4.0",
  "description": "Shared constants and types for rpc4next core and CLI packages.",
  "license": "MIT",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./constants": {
      "import": {
        "types": "./dist/constants.d.ts",
        "default": "./dist/constants.js"
      },
      "default": {
        "types": "./dist/constants.d.ts",
        "default": "./dist/constants.js"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/types.d.ts",
        "default": "./dist/types.js"
      },
      "default": {
        "types": "./dist/types.d.ts",
        "default": "./dist/types.js"
      }
    }
  },
  "scripts": {
    "build": "bun run clean && bun build.ts && bun run build:types",
    "build:types": "tsc -p tsconfig.build-types.json",
    "clean": "bun -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "test": "vitest run"
  }
}
