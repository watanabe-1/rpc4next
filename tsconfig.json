{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "./src/",
    "declaration": true,
    "emitDeclarationOnly": false,
    "sourceMap": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noErrorTruncation": true
  },
  "include": ["src/**/*.ts", "src/**/*.test.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
